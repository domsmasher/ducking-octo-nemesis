*,
*:before,
*:after
  -moz-box-sizing: border-box
  -webkit-box-sizing: border-box
  box-sizing: border-box

body
  background-color : #ffffff

.form
  position: fixed
  top: 0
  left: 0
  bottom: 0
  width: 25%
  background-color: #47a3da
  padding: 1%
  color: #fff
  fieldset
    border: none
  legend
    display: block
    padding: 40px 5px 5px 2px
    font-size: 1.3em
    text-transform: uppercase
    letter-spacing: 1px
    cursor: pointer
  label
    display: block
    padding: 20px 5px 5px 2px
    font-size: 1em
    text-transform: uppercase
    letter-spacing: 1px
    cursor: pointer
  input
    border: 3px solid #fff
    font-family: 'Lato', Calibri, Arial, sans-serif
    line-height: 1.5
    font-size: 1.4em
    padding: 5px 10px
    color: #fff
    display: block
    width: 100%
    background: transparent
  [type="color"]
    height: 1.5em


.preview
  padding-left : 25%
  width: 100%
  height: 100%

.preview-header
  padding: 1px
